{
  "name": "ayrtonvwf",
  "version": "1.0.0",
  "description": "The ayrtonvwf.dev website",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "cpx": "^1.5.0",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^5.1.0",
    "sass": "^1.25.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "sass --watch --style compressed src/scss/index.scss src/css/style.css",
    "css": "sass --style compressed src/scss/index.scss dist/css/style.css",
    "jpg": "imagemin src/images/* --out-dir=dist/images",
    "svg": "imagemin src/icons/svg/* --out-dir=dist/icons/svg && imagemin src/fontawesome/* --out-dir=dist/fontawesome",
    "html": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --minify-css true --minify-js true -o dist/index.html src/index.html",
    "build": "npm run css && npm run jpg && npm run svg && npm run html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayrtonvwf/ayrtonvwf.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ayrtonvwf/ayrtonvwf/issues"
  },
  "homepage": "https://ayrtonvwf.dev"
}
